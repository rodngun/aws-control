# RodNGun Data Manager Environment Configuration
# Copy this file to .env and update with your actual values

# API Update Control
# Set RODNGUN=1 to enable API updates via PATCH endpoints
# Leave unset or set to any other value to disable API updates
RODNGUN=

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=rodngun_sources
POSTGRES_USER=rodngun_user
POSTGRES_PASSWORD=rodngun_pass

# MongoDB Configuration (local)
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB=rodngun

# API Configuration for PATCH Endpoints
# Only used when RODNGUN=1
API_BASE_URL=http://api.rodngun.us
ADMIN_API_KEY=your-secure-admin-key-here
ADMIN_API_SECRET=your-secure-admin-secret-here

# Optional API Keys for Data Sources
# GOOGLE_MAPS_API_KEY=
# CENSUS_API_KEY=

# Environment (development/production)
ENVIRONMENT=production